<div class="todo">
    <section>
        <h1>Todo list</h1>
        <form id="form" action="/" method="POST">
            <p>
                <label for="title">
                    <span>Title <strong><abbr title="required">*</abbr></strong></span>
                    <input type="text" id="title" name="title"  />
                </label>
            </p>
            <p>
                <label for="content">
                    <span>Content </span>
                    <input type="text" id="content" name="task" />
                </label>
            </p>
            <p>
                <button id="add-task" type="submit">Add task</button>
            </p>
        </form>
    </section>
</div>
<div id="todos">
    {{#each resGetTask}}
    <section>
        <h2>{{this.title}}</h2>
        <p>{{this.task}}</p>

        <form id="deleteTask" class="deleteTask" action="/delete/{{id}}" method="POST">
        <input type="submit" value="Delete" />
       </form>
    </section>
    {{/each}}
</div>        
